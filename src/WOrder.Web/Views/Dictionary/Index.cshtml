@using WOrder.Web.Startup
@{
    ViewBag.ActiveMenu = PageNames.Dictionary;
}


<div class="easyui-layout" data-options="fit:true,border:false">
    <div data-options="region:'west',width:200,title:'字典分类',tools:[{iconCls:'icon-add',handler:function(){$('#dlg_dictType').dialog('open')}}]">
        <ul class="easyui-tree" id="tree_dict"></ul>
    </div>
    <div data-options="region:'center'">
        <table id="tb_dict"></table>
    </div>
</div>
<!-- 字典类别 -->
<div id="dlg_dictType">
    <form id="frm_dictType">
        <table class="form-table">
            <tr>
                <td class="tdLabel">类别名称</td>
                <td>
                    <input class="easyui-textbox" name="typeName" data-options="width:300,required:true" />
                </td>
            </tr>
            <tr>
                <td class="tdLabel">类别编号</td>
                <td>
                    <input class="easyui-textbox" name="typeNo" data-options="width:300,required:true,prompt:'ABC'" />
                </td>
            </tr>
            <tr>
                <td class="tdLabel">字典序号</td>
                <td>
                    <input class="easyui-textbox" name="sort" data-options="width:300" />
                </td>
            </tr>
            <tr>
                <td class="tdLabel">字典备注</td>
                <td>
                    <input class="easyui-textbox" name="memo" data-options="width:300,multiline:true,height:100" />
                </td>
            </tr>
        </table>
    </form>
</div>

<!-- 字典信息增删该查 -->
<div id="dlg_dict" class="easyui-dialog" data-options="width:500,height:400,closed:true,title:'字典'">
    <form id="frm_dict" method="POST">
        <input type="hidden" name="id">
        <table class="form-table">
            <tr>
                <td class="tdLabel">字典类别</td>
                <td>
                    <input class="easyui-textbox" name="typeName" data-options="width:300,required:true,readonly:true" />
                </td>
            </tr>
            <tr>
                <td class="tdLabel">字典名称</td>
                <td>
                    <input class="easyui-textbox" name="name" data-options="width:300,required:true,prompt:'XX'" />
                </td>
            </tr>

            <tr>
                <td class="tdLabel">字典序号</td>
                <td>
                    <input class="easyui-textbox" name="sort" data-options="width:300" />
                </td>
            </tr>
            <tr>
                <td class="tdLabel">状态</td>
                <td>
                    <input class="easyui-combobox" name="isDel" data-options="width:300,valueField:'id',textField:'text',data:[{id:0,text:'正常'},{id:1,text:'作废'}]" />

                </td>
            </tr>
            <tr>
                <td class="tdLabel">字典备注</td>
                <td>
                    <input class="easyui-textbox" name="memo" data-options="width:300,multiline:true,height:100" />
                </td>
            </tr>
        </table>
    </form>
</div>

<!-- 字典类别的右键菜单 -->
<div id="mm_dict" class="easyui-menu" style="width:120px;">
    <div data-options="iconCls:'icon-edit'">编辑</div>
    <div data-options="iconCls:'icon-remove'">删除</div>
</div>



@section Scripts{

    <script type="text/javascript">
        $(function () {
            var dictUrl = ""
                , delTypeUrl = ""
                , selectNode;

            var methods = {
                init: function () {

                    $('#dlg_dictType').dialog({
                        width: 500, height: 300, closed: true, title: '字典类别',
                        buttons: [
                            {
                                text: '保存',
                                iconCls: 'icon-save',
                                handler: function () {
                                    methods.saveDictType();
                                }
                            }, {
                                text: '关闭',
                                iconCls: 'icon-cancel',
                                handler: function () {
                                    $('#dlg_dictType').dialog('close');
                                }
                            }
                        ]
                    });

                    $('#dlg_dict').dialog({
                        buttons: [
                            {
                                text: '保存',
                                iconCls: 'icon-save',
                                handler: function () {
                                    methods.saveDict();
                                }
                            }, {
                                text: '关闭',
                                iconCls: 'icon-cancel',
                                handler: function () {
                                    $('#dlg_dict').dialog('close');
                                }
                            }
                        ]
                    });
                },
                initTree: function () {
                    $('#tree_dict').tree({
                        data: [{
                            id: 1, text: '字典信息', children: [{
                                id: 2, text: '公共字典'
                            }]
                        }],
                        onClick: function (node) {
                            selectNode = node;
                            //通过类型来获取字典数据
                            $('#tb_dict').datagrid('reload', dictUrl + "?dictType=" + encodeURI(node.text));
                        },
                        onContextMenu: function (e, node) {
                            e.preventDefault();
                            // select the node
                            $('#tree_dict').tree('select', node.target);
                            // display context menu
                            $('#mm_dict').menu('show', {
                                left: e.pageX,
                                top: e.pageY,
                                onClick: function (item) {
                                    if (item.text == "编辑") {
                                        $('#frm_dictType').form('load', node.attributes);
                                        $('#dlg_dictType').dialog('open')
                                    } else {
                                        $.messager.confirm('确定?', "确定要删除<span style='color:red;'>" + node.text + "</span>", function (r) {
                                            if (!r) {
                                                return;
                                            }
                                            $.post(delTypeUrl, { id: node.id }, function (data) {
                                                $.procAjax(data)
                                            })
                                        })
                                    }
                                }
                            });
                        }
                    });
                },
                initTable: function () {
                    $.dgInit({
                        id: "tb_dict",
                        data: [{ dictType: '测试', dictNo: '111', name: '第一个字典' }],
                        // url:''
                        columns: [[
                            { field: 'id', hidden: true, width: 30 },
                            { field: 'typeName', title: '字典类型', width: 50 },
                            { field: 'no', title: '字典编号', width: 50, sortable: true },
                            { field: 'name', title: '字典名称', width: 50, sortable: true },
                            { field: 'sort', title: '字典排序', width: 50, sortable: true },
                            {
                                field: 'isDel', title: '是否启用', width: 50,
                            },
                            { field: 'memo', title: '备注信息', width: 100 }
                        ]],
                        toolbar: [
                            {
                                text: "新增",
                                iconCls: 'icon-add',
                                handler: function () {

                                    if (!selectNode) {
                                        $.errorMsg("请先选择字典类别");
                                        return;
                                    }
                                    $('#frm_dict').form('clear');
                                    $('#dlg_dict').dialog('open')
                                }
                            }, '-', {
                                text: "编辑",
                                iconCls: 'icon-edit',
                                handler: function () {

                                    $.rowSelectCheck('tb_dict', "请先要编辑的字典", function (row) {
                                        $('#frm_dict').form('load', row);
                                        $('#dlg_dict').dialog('open')
                                    })
                                }
                            }, '-', {
                                text: "删除",
                                iconCls: 'icon-remove',
                                handler: function () {
                                    $.rowSelectCheck('tb_dict', "请先要删除的字典", function (row) {
                                        $('#frm_dict').form('load', row);
                                        $('#dlg_dict').dialog('open')
                                    })
                                }
                            }
                        ]
                    });
                },

                saveDictType: function () {
                    $.formSave({
                        id: 'frm_dictType',
                        success: function (data) {
                            $('#dlg_dictType').dialog('close')
                            $.procAjax(data);
                        }
                    })
                },
                saveDict: function () {
                    $.formSave({
                        id: 'frm_dict',
                        success: function (data) {
                            $('#dlg_dict').dialog('close')
                            $.procAjax(data);
                        }
                    });
                }
            }

            methods.init();
            methods.initTable();
            methods.initTree()
        })
    </script>

    <!--------table template-------->
    <script type="text/html" id="tpl_category">
        {{# layui.each(d,function(index,item){}}
        <tr categoryId="{{item.id}}">
            <td style="text-align:center;">{{index+1}}</td>
            <td style="text-align:center;">{{item.categoryNo}}</td>
            <td>{{item.name}}</td>
            <td>{{item.describe}}</td>
            <td style="text-align:center;">{{item.sortNo}}</td>
            <td style="text-align:center;">
                <a class="layui-btn layui-btn-xs" lay-event="edit">编辑</a>
                <a class="layui-btn layui-btn-danger layui-btn-xs" lay-event="del">删除</a>
            </td>
        </tr>
        {{#})}}
    </script>

    <!--------dialog-------->
    <script type="text/html" id="tpl_frm">
        <form class="layui-form" style="padding:15px 15px;" id="frm_category">
            <input type="hidden" name="id" />
            <input type="hidden" name="categoryNo" />
            @*<div class="layui-form-item">
                    <label class="layui-form-label">编号</label>
                    <div class="layui-input-block">
                        <input type="text" name="categoryNo" required lay-verify="required" readonly="readonly" placeholder="请输入编码" class="layui-input">
                    </div>
                </div>*@
            <div class="layui-form-item">
                <label class="layui-form-label">名称</label>
                <div class="layui-input-block">
                    <input type="text" name="name" required lay-verify="required" placeholder="请输入名称,最长6个字符" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">描述</label>
                <div class="layui-input-block">
                    <textarea placeholder="请输入内容" class="layui-textarea" name="describe"></textarea>
                </div>
            </div>
            <div class="layui-form-item">
                <label class="layui-form-label">序号</label>
                <div class="layui-input-block">
                    <input type="text" name="sortNo" required lay-verify="required|number" placeholder="例:10,20" class="layui-input">
                </div>
            </div>
            <div class="layui-form-item" style="text-align:center;margin-bottom:0px;">
                <button class="layui-btn" type="button" lay-submit lay-filter="btnSubmit">提交</button>
            </div>
        </form>
    </script>
}
